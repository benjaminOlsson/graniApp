extends logged
block content
  div#addingBox
    div#addBoxHeader
      h1#addBoxHeaderText Add Something
    form(method="post" action="/users/#{id}/addToCalCheck")
      select(name="month")
        option(value="0") January
        option(value="1") February
        option(value="2") March
        option(value="3") April
        option(value="4") May
        option(value="5") June
        option(value="6") July
        option(value="7") August
        option(value="8") September
        option(value="9") October
        option(value="10") November
        option(value="11") December
      br
      select(name="dayOfMonth")
        -for(let i = 1; i < 32; i++){
        option(value="#{i}") #{i}
        - }
      br
      select(name="year")
        -for(let i = 2017; i < 2030; i++){
        option(value="#{i}") #{i}
        - }
      br
      select(name="startTime")
        - for(let i = 0; i < 24; i++){
          option(value="#{i}") i
        - }
        select(name="endTime")
          - for(let i = 0; i < 24; i++){
            option(value="#{i}") i
          - }
      br
      input(name="header" type="text")
      br
      textarea(name="message" type="text" rows="10" cols="100")#formTextArea
