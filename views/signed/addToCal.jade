extends logged
block content
  div#addingBox
    div#addBoxHeader
      h1#addBoxHeaderText Add Something
    form(method="post" action="/users/#{id}/addToCalCheck")
      select(name="month")
        option(value="January") January
        option(value="February") February
        option(value="March") March
        option(value="April") April
        option(value="May") May
        option(value="June") June
        option(value="July") July
        option(value="August") August
        option(value="September") September
        option(value="October") October
        option(value="November") November
        option(value="December") December
      br
      select(name="dayOfMonth")
        -for(var i = 1; i < 32; i++){
        option(value="#{i}") #{i}
        - }
      br
      select(name="year")
        -for(var j = 2017; j < 2030; j++){
        option(value="#{j}") #{j}
        - }
      br
      input(name="header" type="text")
      br
      textarea(name="message" type="text" rows="10" cols="100")#formTextArea
